<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="161dp"
        android:layout_height="47dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="$1 - A small dress"
        android:id="@+id/textView"
        android:layout_gravity="center_horizontal|bottom" />

    <ImageButton
        android:layout_width="220dp"
        android:layout_height="300dp"
        android:id="@+id/center_image"
        android:layout_gravity="center"
        android:contextClickable="true"
        android:onClick="buttonToDetailed"
        android:background="@drawable/pants"
        android:scaleType="fitXY"/>

    <ImageButton
        android:layout_width="59dp"
        android:layout_height="49dp"
        android:id="@+id/left_image"
        android:layout_gravity="left|center_vertical"
        android:foreground="@drawable/x"
        android:contextClickable="true"
        android:onClick="buttonOnClick"
        android:scaleType="fitXY"
        android:background="@null"/>

    <ImageButton
        android:layout_width="53dp"
        android:layout_height="44dp"
        android:id="@+id/right_image"
        android:layout_gravity="right|center_vertical"
        android:contextClickable="true"
        android:onClick="buttonOnClick"
        android:scaleType="fitXY"
        android:background="@null"/>

</FrameLayout><!-- From: file:/root/AndroidStudioProjects/SDD-Back-to-Back/app/src/main/res/layout/swiping_main.xml -->